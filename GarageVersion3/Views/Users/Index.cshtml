@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@if (TempData.ContainsKey("Sort"))
{
    <div class="alert alert-success" role="alert">
        @TempData["Sort"]
    </div>
}


@if (TempData.ContainsKey("SortOnEmptyList"))
{
    <div class="alert alert-warning" role="alert">
        @TempData["SortOnEmptyList"]
    </div>
}

@if (TempData.ContainsKey("SearchFail"))
{
    <div class="alert alert-warning" role="alert">
        @TempData["SearchFail"]
    </div>
}

@if (TempData.ContainsKey("SearchSuccess"))
{
    <div class="alert alert-success" role="alert">
        @TempData["SearchSuccess"]
    </div>
}
<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container-fluid">

    <div class="row justify-content-center">
        <div class="mt-3 mb-3">
            <a asp-action="Create" class="btn btn-primary">Add User</a>
            <a asp-action="ShowAll" class="btn btn-info ml-2">Show All Users</a>
        </div>

        <form asp-action="Filter" method="get" class="form-inline m-3 d-flex flex-column align-items-center">
            <p>Choose 1-3 attributes for searching user</p>
            <div class="d-flex flex-row">
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="firstName" placeholder="Search by first name">
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="lastName" placeholder="Search by last name">
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="PersonalIdentifyNumber" placeholder="Search by PIN">
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-secondary mx-5">Search</button>
        </form>
    </div>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th class="px-6 py-4 text-left font-weight-bold">
                        <a asp-action="Sort" asp-route-sortOrder="PersonalIdentifyNumber" class="text-black">Personal Identify Number</a>
                    </th>
                    <th class="px-6 py-4 text-left font-weight-bold">
                        <a asp-action="Sort" asp-route-sortOrder="FirstName" class="text-black">First Name</a>
                    </th>
                    <th class="px-6 py-4 text-left font-weight-bold">
                        <a asp-action="Sort" asp-route-sortOrder="LastName" class="text-black">Last Name</a>
                    </th>
                    <th class="px-6 py-4 text-left font-weight-bold">
                        <a asp-action="Sort" asp-route-sortOrder="NumberOfVehicles" class="text-black">Number Of Vehicles</a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonalIdentifyNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NrOfVehicles)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
