@model IEnumerable<ParkingLotViewModel>

@{
    ViewData["Title"] = "Index";
}


@if (TempData.ContainsKey("SearchFail"))
{
    <div class="alert alert-warning" role="alert">
        @TempData["SearchFail"]
    </div>
}

@if (TempData.ContainsKey("SearchSuccess"))
{
    <div class="alert alert-success" role="alert">
        @TempData["SearchSuccess"]
    </div>
}

<h1>Parkinglot Page</h1>

<div class="container-fluid">

    <div class="row justify-content-center">

        <div class="mt-3 mb-3">
            @if(ViewBag.Vehicles == 0)
            {
                <h2>Parking spaces full</h2>
            }

            else{
                <h2>Parking spaces left: @ViewBag.Vehicles</h2>
            }
        </div>

        <div class="mt-3 mb-3">
            <a asp-action="Create" class="btn btn-primary">Park Vehicle</a>
            <a asp-action="ShowAll" asp-route-status="true" class="btn btn-primary">Show All</a>
        </div>

        <form asp-action="FilterIndex" method="get" class="form-inline m-3 d-flex flex-column align-items-center">
            <p>Choose 1-2 attributes for searching a user</p>
            <div class="d-flex flex-row input-group-sm align-items-center">
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="firstName" placeholder="Search by first name">
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="lastName" placeholder="Search by last name">
                </div>
                <div>
                    <button type="submit" class="btn btn-argentinian-blue ms-4">Search</button>
                </div>
            </div>
        </form>
    </div>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th class="px-6 py-4 text-left font-weight-bold">
                        User
                    </th>

                    <th class="px-6 py-4 text-left font-weight-bold">
                        Vehicle Registration Number
                    </th>

                    <th class="px-6 py-4 text-left font-weight-bold">
                        Checkin
                    </th>

                    <th class="px-6 py-4 text-left font-weight-bold">
                        Parking Spot
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Checkin)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ParkingSpot)
                        </td>

                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Checkout </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>