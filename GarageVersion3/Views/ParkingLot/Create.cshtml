@model IEnumerable<VehicleViewModel>

@{
    ViewData["Title"] = "Create";
}


@if (TempData.ContainsKey("SearchFail"))
{
    <div class="alert alert-warning" role="alert">
        @TempData["SearchFail"]
    </div>
}

@if (TempData.ContainsKey("SearchSuccess"))
{
    <div class="alert alert-success" role="alert">
        @TempData["SearchSuccess"]
    </div>
}

<h1>Park Vehicle</h1>
<hr />

<div class="container-fluid">

    <div class="row justify-content-center">

        <div class="mt-3 mb-3">
            <a asp-action="ShowAllCreate" class="btn btn-primary">Show All</a>
        </div>

        <form asp-action="FilterCreate" method="get" class="form-inline m-3 d-flex flex-column align-items-center">
            <p>Choose 1-3 attributes for searching a user</p>
            <div class="d-flex flex-row input-group-sm align-items-center">
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="firstName" placeholder="Search by first name">
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="lastName" placeholder="Search by last name">
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" name="personalIdentifyNumber" placeholder="Search by PIN">
                </div>
                <div>
                    <button type="submit" class="btn btn-secondary-blue ms-4">Search</button>
                </div>
            </div>
        </form>
    </div>

    <form asp-action="Create" method="post">        

        <table class="table">
            <thead>
                <tr>
                    <th class="px-6 py-4 text-left font-weight-bold">
                        Owner
                    </th>

                     <th class="px-6 py-4 text-left font-weight-bold">
                        Vehicle
                    </th
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationNumber)
                        </td>

                        <td>
                             <button type="submit" name="vehicleId" value="@item.Id" class="btn btn-primary">Park Vehicle</button>
                        </td> 
                    </tr>
                }
            </tbody>
        </table>

    </form>

</div>


<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

